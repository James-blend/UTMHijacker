{
    "manifest_version": 3,
    "name": "UTMHijack",
    "version": "1.0",
    "description": "Modify and customize UTM parameters on the fly.",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "src/popup/popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  